---
import Default from '@astrojs/starlight/components/Header.astro';
const isHomepage = Astro.locals.starlightRoute.id === '';
---

{
  isHomepage ? (
   <slot />
   <style is:global>
      .header {
        display: none;
      }
      .main-frame {
        padding: 0;
      }
  </style>
  ) : (
    <Default>
      <slot />
    </Default>
  )
}
